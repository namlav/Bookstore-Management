@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <title>Đăng Nhập - Secure System</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            overflow: hidden;
            width: 400px;
            padding: 40px;
        }

        .form-control {
            background: #f0f2f5;
            border: none;
            border-radius: 10px;
            padding: 12px 15px;
            margin-bottom: 15px;
        }

            .form-control:focus {
                box-shadow: none;
                background: #e4e6eb;
            }

        .btn-login {
            background: linear-gradient(to right, #667eea, #764ba2);
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-login:hover {
                opacity: 0.9;
                transform: scale(1.02);
            }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <div class="mb-4">
            <i class="fas fa-fingerprint fa-3x text-primary mb-2"></i>
            <h3 class="fw-bold text-dark">Welcome Back</h3>
            <p class="text-muted small">Hệ thống quản lý nhà sách bảo mật</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger py-2 small rounded-3">@ViewBag.Error</div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success py-2 small rounded-3">@ViewBag.Success</div>
        }

        <form method="post">
            <div class="text-start">
                <label class="small text-muted ms-1 mb-1">Tài khoản</label>
                <div class="input-group mb-3">
                    <span class="input-group-text border-0 bg-light rounded-start-3"><i class="fas fa-user text-muted"></i></span>
                    <input name="username" class="form-control m-0" placeholder="Nhập username..." required />
                </div>
            </div>

            <div class="text-start">
                <label class="small text-muted ms-1 mb-1">Mật khẩu</label>
                <div class="input-group mb-4">
                    <span class="input-group-text border-0 bg-light rounded-start-3"><i class="fas fa-lock text-muted"></i></span>
                    <input type="password" name="password" class="form-control m-0" placeholder="••••••••" required />
                </div>
            </div>

            <button class="btn btn-primary btn-login w-100 text-white mb-3">Đăng Nhập</button>
        </form>
        <a href="/Auth/ForgotPassword" class="text-decoration-none small text-secondary hover-link">Quên mật khẩu?</a>
    </div>
</body>
</html>