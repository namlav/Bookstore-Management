@{ Layout = null; }
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card p-4 shadow" style="width:350px">
        <h4 class="text-center">Quên mật khẩu</h4>
        @if (ViewBag.Error != null)
        {<div class="alert alert-danger">@ViewBag.Error</div>}
        <form method="post">
            <input name="username" class="form-control mb-3" placeholder="Nhập username..." required />
            <button class="btn btn-warning w-100">Lấy Token</button>
        </form>
        <a href="/Auth/Login" class="d-block text-center mt-2">Quay lại</a>
    </div>
</div>