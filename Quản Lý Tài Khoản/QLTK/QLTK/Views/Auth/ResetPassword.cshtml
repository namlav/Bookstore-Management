@{ Layout = null; }
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card p-4 shadow" style="width:400px">
        <h4 class="text-center text-success">Đặt lại mật khẩu</h4>
        @if (TempData["Token"] != null)
        {
            <div class="alert alert-warning"><b>Token Demo:</b><br>@TempData["Token"]</div>
        }
        @if (ViewBag.Error != null)
        {<div class="alert alert-danger">@ViewBag.Error</div>}
        <form method="post">
            <input name="username" class="form-control mb-2" value="@TempData["User"]" readonly />
            <input name="token" class="form-control mb-2" value="@TempData["Token"]" placeholder="Token" />
            <input name="newpass" type="password" class="form-control mb-2" placeholder="Pass mới" required />
            <button class="btn btn-success w-100">Xác nhận</button>
        </form>
    </div>
</div>