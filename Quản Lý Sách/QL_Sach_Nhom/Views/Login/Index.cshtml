@model QL_Sach_Nhom.Models.TaiKhoan

@{
    ViewBag.Title = "Đăng nhập hệ thống";
    Layout = null; // Thường trang login không dùng chung Layout với trang chủ
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h3 class="text-center">Đăng nhập</h3>
                <hr />

                @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label>Tên đăng nhập</label>
                        @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control", @placeholder = "Nhập username" })
                        @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <label>Mật khẩu</label>
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Nhập password" })
                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                    </div>

                    if (ViewBag.error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.error</div>
                    }

                    <div class="d-grid gap-2">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
